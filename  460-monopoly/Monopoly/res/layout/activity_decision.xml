<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DecisionActivity" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Decision Point"
        android:textColor="#e0e0e0"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageDecision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_margin="10dp"
        android:src="@drawable/decision" />

    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDecision" >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEventLeft"
            android:text="Left"
            android:textColor="#e0e0e0" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEventRight"
            android:text="Right"
            android:textColor="#e0e0e0" />
    </LinearLayout>

</RelativeLayout>