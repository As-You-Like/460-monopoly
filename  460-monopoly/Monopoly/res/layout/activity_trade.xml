<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".TradeActivity" >

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#484848"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363636"
            android:gravity="center_horizontal|center_vertical"
            android:text="You"
            android:textColor="#9ee02b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4d4d4d"
            android:gravity="center_horizontal|center_vertical"
            android:text="Player2"
            android:textColor="#ffb53d"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top" >

        <RelativeLayout
            android:id="@+id/layout_my"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#8bb522" />

            <ListView
                android:id="@+id/mylistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/txt_mycash" />

            <TextView
                android:id="@+id/txt_mycash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:text="AAAAA"
                android:textColor="#d2e8a5"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_player"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_weight="1" >

            <ListView
                android:id="@+id/playerlistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/txt_playercash" />

            <TextView
                android:id="@+id/txt_playercash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:text="BBBBBBBB"
                android:textColor="#e6d3a5"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8bb522" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#8bb522" />

            <TextView
                android:id="@+id/txt_mychoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="#9ee02b"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_my_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_mychoice"
                android:layout_marginLeft="13dp"
                android:text=""
                android:textColor="#c4a676"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8bb522" />

            <TextView
                android:id="@+id/txt_playerchoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#ffb53d"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_player_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_playerchoice"
                android:layout_marginLeft="13dp"
                android:text=""
                android:textColor="#c4a676"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#454545" >

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEventAccept"
            android:text="Accept"
            android:textColor="#7eb02e"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickEventDeny"
            android:text="Deny"
            android:textColor="#a0ad8b"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>